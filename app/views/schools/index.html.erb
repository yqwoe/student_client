<p id="notice"><%= notice %></p>


<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>学校</th>
      <th > 操作</th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= link_to '查看', school %> <%= link_to '编辑', edit_school_path(school) %> <%= link_to '删除', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @schools %>
<br>

<%= link_to '新建学校', new_school_path %>
