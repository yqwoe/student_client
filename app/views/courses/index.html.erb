<p id="notice"><%= notice %></p>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>课程</th>
      <th > 操作</th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= link_to '查看', course %> <%= link_to '编辑', edit_course_path(course) %> <%= link_to '删除', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @courses %>
<br>

<%= link_to '新建课程', new_course_path %>
