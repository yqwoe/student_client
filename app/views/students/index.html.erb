<p id="notice"><%= notice %></p>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>名字</th>
      <th>手机</th>
      <th>qq</th>
      <th>微信</th>
      <th>课程</th>
      <th>学习状态</th>
      <th colspan="3">操作</th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%=student.name %></td>
        <td><%=student.mobile %></td>
        <td><%=student.qq %></td>
        <td><%=student.wx %></td>
        <td><%=student.course %></td>
        <td><%=student.state >0 ? '开始学习' : '客户' %></td>
        <td><%= link_to '查看', student %></td>
        <td><%= link_to '编辑', edit_student_path(student) %></td>
        <td><%= link_to '删除', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @students %>
<br>

