
<h1>用户列表</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
  <tr>
    <th>用户名称</th>
    <th>手机号</th>
    <th>邮箱</th>
    <th>角色</th>
    <th colspan="3">操作</th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.mobile %></td>
        <td><%= user.email %></td>
        <td><% user.roles.each do |r|  %>
              <%= r.desc %>  &nbsp;
              <% end %>
              </td>
        <td><%= link_to '查看', [:admin,user] %>
          <%= link_to '编辑', edit_admin_user_path(user) %>
          <%= link_to '删除', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<%= paginate @users %>
<br>

<%= link_to '新建角色', new_admin_user_path %>